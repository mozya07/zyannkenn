<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hai"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kiba"
    android:orientation="vertical"
    tools:context=".DevilBattleView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/monsternametxt"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/hagurumabtn"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_marginRight="2dp"
            app:srcCompat="@drawable/hage" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="237dp"
        android:background="#DD0c0c">

        <ImageView
            android:id="@+id/monsterView"
            android:layout_width="match_parent"
            android:layout_height="236dp"
            app:srcCompat="@drawable/mdevil" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="350dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="10dp"
        android:progressDrawable="@drawable/progressbar" />

    <TextView
        android:id="@+id/situationtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/enemyhandView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:srcCompat="@drawable/enemyguk" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gubtn"
            android:layout_width="wrap_content"
            android:layout_height="141dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/guk" />

        <ImageView
            android:id="@+id/chokibtn"
            android:layout_width="wrap_content"
            android:layout_height="141dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/chokik" />

        <ImageView
            android:id="@+id/pabtn"
            android:layout_width="wrap_content"
            android:layout_height="141dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/pak" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="285dp"
        android:layout_height="165dp"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:background="#704404">

        <ImageView
            android:id="@+id/mymonsterView"
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/kikaidoro" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="350dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="10dp"
        android:progressDrawable="@drawable/progressbar" />

    <TextView
        android:id="@+id/mymonsterHPtxt"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="100／HP"
        android:textSize="18sp" />


</LinearLayout>